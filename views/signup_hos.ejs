	<body>
		<% include ./partials/top %>

		<div class="container"><!-- 좌우측의 공간 확보 -->
            <!-- 헤더 들어가는 부분 -->
			<div class="page-header">
				<h1><span class="fa fa-sign-in"></span>병원 회원가입</h1>
			</div>			
						
			<!-- 인증 처리 후 메시지가 있으면 메시지 표시 -->
			<% if (message.length > 0) { %>
				<div class="alert alert-danger"><%= message %></div>
			<% } %>

